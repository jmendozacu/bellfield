<config>
    <modules>
        <MageWorx_XSitemap>
            <version>4.7.1</version>
        </MageWorx_XSitemap>
    </modules>
    <global>
        <models>
            <mageworx_xsitemap>
                <class>MageWorx_XSitemap_Model</class>
                <resourceModel>mageworx_xsitemap_resource</resourceModel>
            </mageworx_xsitemap>
            <mageworx_xsitemap_resource>
                <class>MageWorx_XSitemap_Model_Resource</class>
                <entities>
                    <sitemap>
                        <table>sitemap</table>
                    </sitemap>
                </entities>
            </mageworx_xsitemap_resource>
        </models>
        <blocks>
            <mageworx_xsitemap>
                <class>MageWorx_XSitemap_Block</class>
            </mageworx_xsitemap>
            <page>
                <rewrite>
                    <template_links>MageWorx_XSitemap_Block_Page_Template_Links</template_links>
                </rewrite>
            </page>
        </blocks>
        <helpers>
            <mageworx_xsitemap>
                <class>MageWorx_XSitemap_Helper</class>
            </mageworx_xsitemap>
        </helpers>
        <resources>
            <mageworx_xsitemap_setup>
                <setup>
                    <module>MageWorx_XSitemap</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </mageworx_xsitemap_setup>
        </resources>
        <template>
            <email>
                <mageworx_xsitemap_generate_error_email_template translate="label" module="mageworx_xsitemap">
                    <label>Extended Sitemap generate Warnings</label>
                    <file>mageworx/xsitemap/xsitemap_generate_warning.html</file>
                    <type>text</type>
                </mageworx_xsitemap_generate_error_email_template>
            </email>
        </template>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <MageWorx_XSitemap after="Mage_Adminhtml">MageWorx_XSitemap_Adminhtml</MageWorx_XSitemap>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <frontend>
        <routers>
            <mageworx_xsitemap>
                <use>standard</use>
                <args>
                    <module>MageWorx_XSitemap</module>
                    <frontName>sitemap</frontName>
                </args>
            </mageworx_xsitemap>
        </routers>
        <layout>
            <updates>
                <mageworx_xsitemap>
                    <file>mageworx_xsitemap.xml</file>
                </mageworx_xsitemap>
            </updates>
        </layout>
        <translate>
            <modules>
                <MageWorx_XSitemap>
                    <files>
                        <default>MageWorx_XSitemap.csv</default>
                    </files>
                </MageWorx_XSitemap>
            </modules>
        </translate>
    </frontend>
    <adminhtml>
        <events>
            <adminhtml_cms_page_edit_tab_meta_prepare_form>
                <observers>
                    <mageworx_xsitemap_cms_page_add_form_fields>
                        <class>MageWorx_XSitemap_Model_Observer_PrepareForm_Page</class>
                        <method>addFormFieldsForCmsPage</method>
                    </mageworx_xsitemap_cms_page_add_form_fields>
                </observers>
            </adminhtml_cms_page_edit_tab_meta_prepare_form>
            <mageworx_xsitemap_add_generator>
                <observers>
                    <mageworx_xsitemap_add_generator_for_category_observer>
                        <class>MageWorx_XSitemap_Model_Observer_Generate_Category</class>
                        <method>addGenerator</method>
                    </mageworx_xsitemap_add_generator_for_category_observer>
                    <mageworx_xsitemap_add_generator_for_product_observer>
                        <class>MageWorx_XSitemap_Model_Observer_Generate_Product</class>
                        <method>addGenerator</method>
                    </mageworx_xsitemap_add_generator_for_product_observer>
                    <mageworx_xsitemap_add_generator_for_awblog_observer>
                        <class>MageWorx_XSitemap_Model_Observer_Generate_AwBlog</class>
                        <method>addGenerator</method>
                    </mageworx_xsitemap_add_generator_for_awblog_observer>
                    <mageworx_xsitemap_add_generator_for_fpblog_observer>
                        <class>MageWorx_XSitemap_Model_Observer_Generate_FpBlog</class>
                        <method>addGenerator</method>
                    </mageworx_xsitemap_add_generator_for_fpblog_observer>
                    <mageworx_xsitemap_add_generator_for_splash_page_observer>
                        <class>MageWorx_XSitemap_Model_Observer_Generate_SplashPage</class>
                        <method>addGenerator</method>
                    </mageworx_xsitemap_add_generator_for_splash_page_observer>
                    <mageworx_xsitemap_add_generator_for_splash_page_pro_observer>
                        <class>MageWorx_XSitemap_Model_Observer_Generate_SplashPagePro</class>
                        <method>addGenerator</method>
                    </mageworx_xsitemap_add_generator_for_splash_page_pro_observer>
                </observers>
            </mageworx_xsitemap_add_generator>
            <!--SEO Category Grid Events Begin-->
            <mageworx_seoextended_seocategory_grid_preparemassaction>
                <observers>
                    <mageworx_xsitemap_add_exclude_from_sitemap_seocategory_massaction>
                        <type>singleton</type>
                        <class>MageWorx_XSitemap_Model_Observer_SeoCategory</class>
                        <method>addMassactionToSeoCategoryGrid</method>
                    </mageworx_xsitemap_add_exclude_from_sitemap_seocategory_massaction>
                </observers>
            </mageworx_seoextended_seocategory_grid_preparemassaction>
            <mageworx_seoextended_seocategory_grid_preparecolumns>
                <observers>
                    <mageworx_xsitemap_add_exclude_from_sitemap_seocategory_grid>
                        <type>singleton</type>
                        <class>MageWorx_XSitemap_Model_Observer_SeoCategory</class>
                        <method>addColumnToSeoCategoryGrid</method>
                    </mageworx_xsitemap_add_exclude_from_sitemap_seocategory_grid>
                </observers>
            </mageworx_seoextended_seocategory_grid_preparecolumns>
            <mageworx_seoextended_seocategory_massedit_preparecolumns>
                <observers>
                    <mageworx_xsitemap_add_exclude_from_sitemap_seocategory_massedit>
                        <type>singleton</type>
                        <class>MageWorx_XSitemap_Model_Observer_SeoCategory</class>
                        <method>addColumnToSeoCategoryMassEdit</method>
                    </mageworx_xsitemap_add_exclude_from_sitemap_seocategory_massedit>
                </observers>
            </mageworx_seoextended_seocategory_massedit_preparecolumns>
            <mageworx_seoextended_seocategory_grid_preparecollection>
                <observers>
                    <mageworx_xsitemap_add_exclude_from_sitemap_seocategory_grid_collection>
                        <type>singleton</type>
                        <class>MageWorx_XSitemap_Model_Observer_SeoCategory</class>
                        <method>addFieldToSeoCategoryGrid</method>
                    </mageworx_xsitemap_add_exclude_from_sitemap_seocategory_grid_collection>
                </observers>
            </mageworx_seoextended_seocategory_grid_preparecollection>
            <mageworx_seoextended_seocategory_massedit_preparecollection>
                <observers>
                    <mageworx_xsitemap_add_exclude_from_sitemap_seocategory_massedit_collection>
                        <type>singleton</type>
                        <class>MageWorx_XSitemap_Model_Observer_SeoCategory</class>
                        <method>addFieldToSeoCategoryGrid</method>
                    </mageworx_xsitemap_add_exclude_from_sitemap_seocategory_massedit_collection>
                </observers>
            </mageworx_seoextended_seocategory_massedit_preparecollection>
            <!--SEO Category Grid Events End-->
        </events>
        <layout>
            <updates>
                <mageworx_xsitemap>
                    <file>mageworx_xsitemap.xml</file>
                </mageworx_xsitemap>
            </updates>
        </layout>
        <translate>
            <modules>
                <MageWorx_XSitemap>
                    <files>
                        <default>MageWorx_XSitemap.csv</default>
                    </files>
                </MageWorx_XSitemap>
            </modules>
        </translate>
    </adminhtml>
    <default>

    </default>
    <crontab>
        <jobs>
            <mageworx_xsitemap>
                <schedule>
                    <cron_expr>0 3 * * *</cron_expr>
                </schedule>
                <run>
                    <model>mageworx_xsitemap/observer::scheduledGenerateSitemaps</model>
                </run>
            </mageworx_xsitemap>
        </jobs>
    </crontab>
    <default>
        <mageworx_seo>
            <xsitemap>
                <show_stores>1</show_stores>
                <show_categories>1</show_categories>
                <show_products>1</show_products>
                <exclude_out_of_stock>0</exclude_out_of_stock>
                <sort_order>position</sort_order>
                <show_pages>1</show_pages>
                <filter_pages>no-route,enable-cookies</filter_pages>
                <show_links>1</show_links>
                <canonical_url>0</canonical_url>
            </xsitemap>
            <google_sitemap>
                <enabled>0</enabled>
                <error_email><![CDATA[]]></error_email>
                <error_email_template>mageworx_xsitemap_generate_error_email_template</error_email_template>
                <error_email_identity>general</error_email_identity>
                <page_priority>0.25</page_priority>
                <page_changefreq>daily</page_changefreq>
                <category_priority>0.5</category_priority>
                <category_changefreq>daily</category_changefreq>
                <validate_urls>1</validate_urls>
                <product_priority>1</product_priority>
                <product_changefreq>daily</product_changefreq>
                <product_images>0</product_images>
                <image_from_cache>0</image_from_cache>
                <alternate_urls>0</alternate_urls>
                <use_css_for_xml>0</use_css_for_xml>
                <product_tags>1</product_tags>
                <product_tags_priority>0.5</product_tags_priority>
                <product_tags_changefreq>daily</product_tags_changefreq>
                <exclude_out_of_stock>0</exclude_out_of_stock>
                <link_changefreq>daily</link_changefreq>
                <link_priority>0.1</link_priority>
                <blog>0</blog>
                <blog_changefreq>daily</blog_changefreq>
                <blog_priority>0.1</blog_priority>
                <fishpig_attribute_splash>0</fishpig_attribute_splash>
                <fishpig_splash_changefreq>daily</fishpig_splash_changefreq>
                <fishpig_splash_priority>0.25</fishpig_splash_priority>
                <fishpig_attribute_splash>0</fishpig_attribute_splash>
                <fishpig_splash_pro_changefreq>daily</fishpig_splash_pro_changefreq>
                <fishpig_splash_pro_priority>0.25</fishpig_splash_pro_priority>
                <use_index>0</use_index>
                <split_size>10240</split_size>
                <xml_limit>500</xml_limit>
                <max_links>50000</max_links>
            </google_sitemap>
        </mageworx_seo>
    </default>
</config>