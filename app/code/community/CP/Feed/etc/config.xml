    <modules>
        <CP_Feed>
            <version>2.2.8</version>
        </CP_Feed>
    </modules>
    <frontend>
        <routers>
            <cp_feed>
                <use>standard</use>
                <args>
                    <module>CP_Feed</module>
                    <frontName>feed</frontName>
                </args>
            </cp_feed>
        </routers>
		
