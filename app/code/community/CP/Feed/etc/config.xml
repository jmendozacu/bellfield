    </frontend>
    <admin>
        <routers>
            <cp_feed>
                <use>admin</use>
                <args>
                    <module>CP_Feed</module>
                    <frontName>cp_feed</frontName>
                </args>
            </cp_feed>
        </routers>
    </admin>
    <adminhtml>

        <layout>
            <updates>
                <cp_feed>
                    <file>cp-feed.xml</file>
                </cp_feed>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <models>
            <cp_feed>
                <class>CP_Feed_Model</class>
                <resourceModel>cp_feed_mysql4</resourceModel>
            </cp_feed>
            <cp_feed_mysql4>
                <class>CP_Feed_Model_Mysql4</class>
                <entities>
                    <item>
                        <table>cp_feed_entity</table>
                    </item>
                </entities>
            </cp_feed_mysql4>
			
			<cron>
                <rewrite>
                    <observer>CP_Feed_Model_Observer</observer>
                </rewrite>
            </cron>
        </models>
        <blocks>
            <cp_feed>
                <class>CP_Feed_Block</class>
            </cp_feed>
        </blocks>
        <resources>
            <cp_feed_setup>
                <setup>
                    <module>CP_Feed</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </cp_feed_setup>
            <cp_feed_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </cp_feed_write>
            <cp_feed_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </cp_feed_read>
        </resources>
        <helpers>
            <cp_feed>
                <class>CP_Feed_Helper</class>
            </cp_feed>
        </helpers>
    </global>
