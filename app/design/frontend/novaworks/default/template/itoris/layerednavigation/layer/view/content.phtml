	<dl id="narrow-by-list">
		<?php $_filters = $this->getFilters() ?>
		<?php foreach ($_filters as $_filter): ?>
		<?php if($_filter->canBeShown()): ?>
        	
            <?php
			$hide_cat = false;
			$filter_label = $this->__($_filter->getName()); 
            if(strtolower($_filter->getName()) == 'category'){
				$men_cat_id = Mage::getStoreConfig('theme/general/men_root_cat_id');
				$women_cat_id = Mage::getStoreConfig('theme/general/women_root_cat_id');
				
				$women_category_title = 'Women';
				$men_category_title = 'Men';
				
				$_current_category = Mage::registry('current_category');
				
				if($_current_category){
					if($_current_category->getLevel() == 2){
						$filter_label = $_current_category->getName();
					}elseif($_current_category->getLevel() > 2){
						$hide_cat = true;
						$cat_path = explode("/", $_current_category->getPath());
						foreach($cat_path as $cat_path_id){
							if(trim($cat_path_id) == trim($women_cat_id)){
								$filter_label = $women_category_title;
							}
							if(trim($cat_path_id) == trim($men_cat_id)){
								$filter_label = $men_category_title;
							}
						}
					}
				}	
            }
			?>
            
            
			<?php //if(strtolower($_filter->getName()) != 'category'){?>
            	<?php //$_filter->isClosed()?>
                <?php
				$accordian_class = 'ln-closed';
				if($_filter->hasFiltersInState()){
					$accordian_class = 'ln-opened';
				}
				?>
                
                <?php if(strtolower($_filter->getName()) == 'category' && $hide_cat){?>
					
                <?php }else{?>
					<dt id="laynav-filter-<?php echo $_filter->getFilter()->getRequestVar() ?>" class="<?php echo $accordian_class?>" onclick="LayNav.Toggler.toggle(this, '<?php echo $_filter->getFilter()->getRequestVar() ?>'); ">
						<?php if ($_filter->hasFiltersInState()) {?>
							<button class="clear-filter-button" type="button"
								onclick="LayNav.sendWithAdditionalParams({clear: '<?php echo $_filter->getFilter()->getRequestVar() ?>'});Event.stop(LayNav.evObj(arguments)); return false;" ></button>
						<?php } ?>
						<?php echo $filter_label; ?>
					</dt>
					<dd <?php if($_filter->hasFiltersInState()) { ?>style="display: block;" <?php }else{?> style="display:none"<?php }?>><?php echo $_filter->getHtml() ?></dd>
				<?php }?>  
            <?php //}?>    
		<?php endif; ?>
		<?php endforeach; ?>
	</dl>
	<script type="text/javascript">decorateDataList('narrow-by-list')</script>
<?php endif; ?>
